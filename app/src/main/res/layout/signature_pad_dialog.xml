<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:padding="20dp"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_close"
        android:layout_gravity="right"
        android:id="@+id/closeIc_signaturePadD"/>

    <com.github.gcacace.signaturepad.views.SignaturePad
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/signature_pad_SignaturePadDialog"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:background="@drawable/round_corner_black"
        android:layout_marginBottom="25dp"
        app:penColor="@android:color/black"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Clear Pad"
            android:layout_weight="1"
            android:background="@drawable/round_corner_black_back"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/clearPad_signaturePadD"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_corner_black_back"
            android:textColor="@color/white"
            android:text="save signature"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/saveSignature_signaturePadD"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>