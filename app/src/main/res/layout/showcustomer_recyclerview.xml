<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/relativeLayout_showCustomerRecView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/round_corner_gray_back"
        android:orientation="horizontal"
        android:paddingStart="30dp"
        android:paddingBottom="10dp"
        tools:ignore="RtlSymmetry">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/customerName_txt_showCustomerRecView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:singleLine="true"
               />

            <TextView
                android:id="@+id/companyName_txt_showCustomerRecView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginBottom="2dp"
                android:text="Company :- " />

            <TextView
                android:id="@+id/mobileNo_txt_showCustomerRecView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginBottom="2dp"
                android:text="Mobile :- " />

            <TextView
                android:id="@+id/email_txt_showCustomerRecView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email :-"
                android:layout_marginBottom="2dp"
                android:singleLine="true"/>


            <TextView
                android:id="@+id/address_txt_showCustomerRecView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address :-"
                android:layout_marginBottom="2dp"
                android:singleLine="true"/>

        </LinearLayout>

        <CheckBox
            android:id="@+id/checkbox_showCustomerRecView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:button="@drawable/checkbox_setter"
            android:checked="false"
            android:clickable="false"
            android:gravity="center" />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/editIc_showCustomerRecView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/round_black"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_edit" />

</RelativeLayout>